<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginStart="@dimen/_60sdp"
    android:layout_height="@dimen/_50sdp"
    android:layout_margin="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutUserContact"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineVertical0.10"
            style="@style/guideLineVertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideLineHorizontal0.50"
            style="@style/guideLineHorizontal"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:contentDescription="@string/avatar"
            android:src="@drawable/ic_user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/guideLineHorizontal0.50"
            app:layout_constraintEnd_toEndOf="@id/guideLineVertical0.10"
            app:layout_constraintStart_toStartOf="@id/guideLineVertical0.10"
            app:layout_constraintTop_toTopOf="@id/guideLineHorizontal0.50" />


        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="@string/user_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintBottom_toBottomOf="@id/guideLineHorizontal0.50"
            app:layout_constraintStart_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/guideLineHorizontal0.50" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>