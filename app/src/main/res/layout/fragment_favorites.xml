<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.favorites.FavoritesFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineVertical0.20"
        style="@style/guideLineVertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineHorizontal0.20"
        style="@style/guideLineHorizontal"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineHorizontal0.10"
        style="@style/guideLineHorizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guideLineHorizontal0.20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideLineVertical0.20"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_user_contact" />

</androidx.constraintlayout.widget.ConstraintLayout>